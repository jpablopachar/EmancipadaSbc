<% include partials/header %>
  <% for(let i=0; i < datos.length; i++) { %>
    <div style="height: 100vh">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <h1 class="text-center animated bounceInLeft delay-1s"><%= datos[i].name %></h1>
            <hr class="bg-warning">
          </div>
        </div>
        <div class="row d-flex justify-content-around">
          <div class="col-md-3 px-0 animated bounceInRight bg-warning personajes">
            <div class="card mx-auto text-center border-0 rounded-0">
              <div class="card-header rounded-0 bg-primary text-white">Personaje 1</div>
              <div class="card-body border">
                <ul class="list-group list-group-flush border-0 text-left rounded-0">
                  <li class="list-group-item"><span class="font-weight-bold">@type</span> <span class="font-weight-light">Person</span></li>
                  <li class="list-group-item"><span class="font-weight-bold">givenName</span> <span class="font-weight-light"><%= datos[i].character[0].givenName %></span></li>
                  <li class="list-group-item"><span class="font-weight-bold">gender</span> <span class="font-weight-light"><%= datos[i].character[0].gender %></span></li>
                  <li class="list-group-item"><span class="font-weight-bold">height</span> <span class="font-weight-light"><%= datos[i].character[0].height %></span></li>
                  <li class="list-group-item"><span class="font-weight-bold">nacionality</span></li>
                  <li class="list-group-item"><span class="font-weight-bold ml-3">@type</span> <span class="font-weight-light">Country</span></li>
                  <li class="list-group-item"><span class="font-weight-bold ml-3">name</span> <span class="font-weight-light"><%= datos[i].character[0].nationality %></span></li>
                </ul>
              </div>
            </div>
          </div>
          <div class="col-md-3 mt-3 mt-md-0 px-0 animated bounceInRight bg-warning personajes">
            <div class="card mx-auto text-center border-0 rounded-0">
              <div class="card-header rounded-0 bg-primary text-white">Personaje 2</div>
              <div class="card-body border">
                <ul class="list-group list-group-flush border-0 text-left rounded-0">
                  <li class="list-group-item"><span class="font-weight-bold">@type</span> <span class="font-weight-light">Person</span></li>
                  <li class="list-group-item"><span class="font-weight-bold">givenName</span> <span class="font-weight-light"><%= datos[i].character[1].givenName %></span></li>
                  <li class="list-group-item"><span class="font-weight-bold">gender</span> <span class="font-weight-light"><%= datos[i].character[1].gender %></span></li>
                  <li class="list-group-item"><span class="font-weight-bold">height</span> <span class="font-weight-light"><%= datos[i].character[1].height %></span></li>
                  <li class="list-group-item"><span class="font-weight-bold">nacionality</span></li>
                  <li class="list-group-item"><span class="font-weight-bold ml-3">@type</span> <span class="font-weight-light">Country</span></li>
                  <li class="list-group-item"><span class="font-weight-bold ml-3">name</span> <span class="font-weight-light"><%= datos[i].character[1].nationality %></span></li>
                </ul>
              </div>
            </div>
          </div>
        </div>
        <div class="row d-flex justify-content-center botonVolver">
          <a href="http://localhost:3000" class="btn btn-warning mt-3 mt-md-0 rounded-0 animated bounceInUp delay-1s"><i class="fas fa-arrow-left text-white"></i> Regresar</a>
        </div>
      </div>
    </div>
  <% } %>
<% include partials/footer%>